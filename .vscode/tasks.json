{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "node start",
          "type": "shell",
          "command": "node",
          "args": ["app.js"],
          "isBackground": true,
          "problemMatcher": {
              "pattern": {
                  "regexp": "."
              },
              "background": {
                  "activeOnStart": true,
                  "beginsPattern": ".",
                  "endsPattern": "."
              }
          }
      },
      {
          "label": "StopTasks",
          "command": "echo ${input:terminate}",
          "type": "shell",
      }
  ],
  "inputs": [
      {
        "id": "terminate",
        "type": "command",
        "command": "workbench.action.tasks.terminate",
        "args": "terminateAll"
      }
  ]
}