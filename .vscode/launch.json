{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via Vercel", 
      "runtimeExecutable": "vercel",
      "runtimeArgs": ["dev"],
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Vercel Start/Client",
      "configurations": ["Launch via Vercel", "Launch Chrome"]
    }
  ]
}
